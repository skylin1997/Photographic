/* components/detaildate/index.wxss */
.components-date-contnet{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: rgba(82,169,255,1);
  width: 134rpx;
  height: 134rpx;
  border-radius: 28rpx;
  margin: 20rpx;
}
.none{
  background-color: rgba(199,199,199,1) !important;
  pointer-events: none;
}
.content-date-circle{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-top: 8rpx;
}
.content-date-month{
  display: block;
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
  color: #FFFFFF;
}
.content-date-line{
  display: block;
  height: 0rpx;
  width: 126rpx;
  border: 1rpx solid rgba(199, 224, 249, 0.5);
}
.content-date-days{
  display: block;
  font-family: "Microsoft YaHei UI";
  font-size: 46rpx;
  color: #FFFFFF;
}