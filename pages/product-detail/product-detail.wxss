.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 24rpx 0 24rpx;
}
.msg{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height:180rpx;
  margin: 24rpx 0 24rpx 0;
}
.msg image{
  width:180rpx;
  height:180rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  border-radius: 20rpx;
  box-shadow: 0px 2rpx 4rpx 2rpx rgba(0,0,0,0.16);
}
.msg-text{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.msg-price{
font-size: 50rpx;
font-family: Microsoft YaHei;
font-weight: Bold;
color: rgba(251,22,66,1);
letter-spacing: 0px;
}
.item{
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  width:100%;
  margin-bottom: 24rpx;
}
.item-content{
  font-size: 24rpx;
  margin:24rpx 24rpx 0 24rpx;
}
.project{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 24rpx 0 24rpx 0;
}
.project-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.project-item image{
  width: 90rpx;
  height:90rpx;
}
.project-item text{
  font-size: 24rpx;
}
.storeList{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.store{
  display: flex;
  justify-content: center;
  width: 182rpx;
  height:56rpx;
  border-radius: 14px 14px 14px 14px;
  border: 2rpx solid rgba(82,169,255,1);
  line-height: 56rpx;
}
.store-hover{
  background: rgba(82,169,255,1);
  color: #fff;
}
.none-store{
  color:  rgba(251,22,66,1);
}
.order{
position: absolute;
bottom: 0;
width: 100%;
height: 100rpx;
 background: rgba(252,206,57,1);
 box-shadow: 0px -1px 6px 0px rgba(0,0,0,0.16);
 text-align: center;
 line-height: 100rpx;
}
