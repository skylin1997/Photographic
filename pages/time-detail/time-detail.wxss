/* pages/time-detail/time-detail.wxss */
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;
   height: 40rpx;
}
.container{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.detail-date-header{
  background-color: rgba(252,206,57,1);
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
}
.detail-date-header image{
  width: 24rpx;
  height: 24rpx;
}
.time-section{
    width:80%;
    padding: 0 90rpx; 
    margin:50rpx 0;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.time{
  width:130rpx;
  height:46rpx;
  border: 3rpx solid rgba(82,169,255,1);
  border-radius: 30rpx;
  font-size: 28rpx;
  margin:10rpx 0 10rpx 0;
}
.time text{
  width: 130rpx;
  margin-left: 20%;
  line-height: 46rpx;
}
.null{
  border:rgba(199,199,199,1);
  background:rgba(199,199,199,1);
  color: #fff;
  pointer-events: none;
}
.time-hover{
  background: rgba(82,169,255,1);
  color: #fff;
}